  "posTagging": {
    "enablePOSTagging": false,
    "taggerType": "spacy",
    "enableNamedEntityRecognition": false,
    "nerType": "spacy"
  },
  "sentiment": {
    "enableSentimentAnalysis": false,
    "sentimentModel": "vietnamese-sentiment",
    "enableEmotionDetection": false,
    "emotionModel": "vietnamese-emotion"
  },
  "entities": {
    "enableEntityExtraction": true,
    "entityTypes": ["person", "organization", "location", "date", "time", "number", "email", "url"],
    "enableCustomEntities": true,
    "customEntityPatterns": {
      "phone": "\\b\\d{3,4}[-.\\s]?\\d{3,4}[-.\\s]?\\d{3,4}\\b",
      "id_card": "\\b\\d{9,12}\\b",
      "bank_account": "\\b\\d{10,16}\\b"
    }
  },
  "dates": {
    "enableDateExtraction": true,
    "dateFormats": [
      "dd/mm/yyyy",
      "dd-mm-yyyy",
      "dd.mm.yyyy",
      "dd/mm/yy",
      "dd-mm-yy",
      "dd.mm.yy",
      "tháng mm năm yyyy",
      "ngày dd tháng mm năm yyyy"
    ],
    "enableRelativeDates": true,
    "relativeDateKeywords": ["hôm nay", "hôm qua", "ngày mai", "tuần trước", "tuần sau", "tháng trước", "tháng sau", "năm trước", "năm sau"]
  },
  "numbers": {
