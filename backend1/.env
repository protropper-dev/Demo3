# ==================== THÔNG TIN DỰ ÁN ====================
PROJECT_NAME=FastAPI Backend
VERSION=1.0.0
DESCRIPTION=API Backend sử dụng FastAPI
API_V1_STR=/api/v1

# ==================== DATABASE ====================
DATABASE_URL=sqlite:///./app.db

# ==================== CORS ====================
BACKEND_CORS_ORIGINS=["http://localhost:5173", "http://localhost:8000"]

# ==================== FILE UPLOAD ====================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
DOCUMENTS_UPLOAD_DIR=documents/upload

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================== ENVIRONMENT ====================
ENVIRONMENT=development

# ==================== MODEL PATHS ====================
EMBEDDING_MODEL_PATH=models/multilingual_e5_large
LLM_MODEL_PATH=models/vinallama-2.7b-chat

# ==================== DOCUMENT PATHS ====================
DOCUMENTS_PATH=../documents
LUAT_DOCS_PATH=../documents/Luat
ENGLISH_DOCS_PATH=../documents/TaiLieuTiengAnh
VIETNAMESE_DOCS_PATH=../documents/TaiLieuTiengViet
DOCUMENTS_UPLOAD_DIR=documents/upload

# ==================== VECTOR STORE ====================
VECTOR_STORE_PATH=data
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ==================== RAG SETTINGS ====================
TOP_K_RESULTS=10
SIMILARITY_THRESHOLD=0.3

# ==================== RAG DATA PATHS ====================
FAISS_PATH=data/all_faiss.index
PICKLE_PATH=data/all_embeddings.pkl

# ==================== OCR SETTINGS ====================
TESSERACT_PATH=C:\Program Files\Tesseract-OCR\tesseract.exe
OCR_LANGUAGES=vie+eng
OCR_PSM=6
USE_OCR=true

# ==================== MODEL SETTINGS ====================
USE_QUANTIZATION=false
MAX_MEMORY=90%

# ==================== BACKEND2 INTEGRATION ====================
USE_4BIT_QUANTIZATION=true
USE_DOUBLE_QUANTIZATION=true
LOW_CPU_MEM_USAGE=true
USE_CACHE=true

# ==================== DEVICE CONFIGURATION ====================
DEVICE=cuda:0
GPU_MEMORY_FRACTION=0.8
GPU_DEVICE_ID=0
CPU_THREADS=4

# ==================== MODEL GENERATION SETTINGS ====================
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7
LLM_TOP_K=50
LLM_TOP_P=0.95
EMBEDDING_TOP_K=5
EMBEDDING_MAX_TOKENS_PER_CHUNK=4096